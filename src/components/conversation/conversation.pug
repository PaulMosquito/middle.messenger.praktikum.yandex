style
    include conversation.less


mixin conversation({ name, lastMessage, lastMessageDate, countUnreadMessages })
    div.conversation 
        div.conversation-logo
            div.conversation-logo_icon


        div.conversation-name-and-message
            div.conversation-name-and-message__name=name
            div.conversation-name-and-message__

        div.conversation-unread-message-and-date
            div.conversation-unread-message-and-date__date="00:00"
            div.conversation-unread-message-and-date__unread-messages
                div.conversation-unread-message-and-date__unread-messages__count=countUnreadMessages > 99 ? "99+" : countUnreadMessages 