extends layout.pug

block content 
  include ../components/loginForm/loginForm.pug 

  +loginForm({
    title: { value: "LET'S TALK ABOUT YOURSELF", center: true },
    inputs: [
      { name: "Name" },
      { name: "Last Name" },
      { name: "Login" },
      { name: "Mail" },
      { name: "Phone number" },
      { name: "Password", type: "password" },
      { name: "Repeat password", type: "password" }
    ],
    links: [
      {href: "./chat.pug", title: "Let's go!", isButton: true},
      {href: "/", title: "Sign in"}
    ]
  })
  